<body>

<header class="header">
  <div class="header__logo">
    <a href="/"><img src="catalog/view/theme/default/img/logo_mark.png" alt="logo"></a>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <div class="header__info">
          <a href="/" class="header__minlogo"><img src="catalog/view/theme/default/img/logo_mark.png" alt="logo"></a>
          <a href="/" class="header__mobile-logo"><img src="catalog/view/theme/default/img/mobile-logo.png" alt="logo"></a>
          <div class="header__nav">
            <div class="nav-button nav-button1">
              <a href="/about">
                  <p>О компании</p>
                  <div class="hoverBtn"></div>
                  <div class="hoverBtn-bottom"></div>
               </a>
            </div>
            <div class="nav-button nav-button2">
              <a href="/news">
                  <p>Новости</p>
                  <div class="hoverBtn"></div>
                  <div class="hoverBtn-bottom"></div>
               </a>
            </div>
            <div class="nav-button nav-button3">
              <a href="/contact">
                  <p>Контактная информация</p>
                  <div class="hoverBtn"></div>
                  <div class="hoverBtn-bottom"></div>
               </a>
            </div>
          </div>
          <div class="header__right">
            {{ search }}
            <div class="header__place">
              <a href="tel:{{ telephone }}">{{ telephone }}</a>
              <a href="tel:{{ telephone2 }}">{{ telephone2 }}</a>
              <span>{{ address }}</span>
            </div>
            <button class="btn btn-bg" data-toggle="modal" data-target="#callback_modal">Обратный звонок</button>
          </div>
        </div>
        {{ menu }}
      </div>
    </div>
  </div>
</header>
